{
    "type": "module",
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "preserve",
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es2019",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "lib": [
            "es2019",
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "allowJs": true
    },
    "files": [
        "src/index.ts"
    ]
}